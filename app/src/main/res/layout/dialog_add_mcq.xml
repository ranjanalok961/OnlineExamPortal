<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/light_gray"
    android:padding="16dp">

    <!-- CardView to add elevation and make it look modern -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Styled EditText for question input -->
            <EditText
                android:id="@+id/mcqQuestionEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Question"
                android:backgroundTint="@color/primary"
                android:textColor="@color/dark_gray"
                android:padding="12dp"
                android:textSize="16sp" />

            <!-- Options input fields -->
            <EditText
                android:id="@+id/option1EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Option 1"
                android:backgroundTint="@color/primary"
                android:padding="12dp"
                android:textColor="@color/dark_gray"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/option2EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Option 2"
                android:backgroundTint="@color/primary"
                android:padding="12dp"
                android:textColor="@color/dark_gray"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/option3EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Option 3"
                android:backgroundTint="@color/primary"
                android:padding="12dp"
                android:textColor="@color/dark_gray"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/option4EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Option 4"
                android:backgroundTint="@color/primary"
                android:padding="12dp"
                android:textColor="@color/dark_gray"
                android:textSize="16sp" />

            <!-- Correct answer field -->
            <EditText
                android:id="@+id/correctAnswerEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correct Answer"
                android:backgroundTint="@color/primary"
                android:padding="12dp"
                android:textColor="@color/dark_gray"
                android:textSize="16sp" />

            <!-- Marks field -->
            <EditText
                android:id="@+id/marks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Marks..."
                android:backgroundTint="@color/primary"
                android:padding="12dp"
                android:textColor="@color/dark_gray"
                android:textSize="16sp" />

            <!-- Button layout with horizontal spacing -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:weightSum="2">

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
