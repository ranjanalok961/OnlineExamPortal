<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/bg_card"
    android:gravity="center_vertical"
    android:elevation="4dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:clipToOutline="true">

    <!-- Left Content (Exam Details) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2"
        android:paddingEnd="16dp"
        android:gravity="center_vertical">

        <!-- Title TextView -->
        <TextView
            android:id="@+id/studentDashboardExamTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exam Title"
            android:textColor="@color/primaryText"
            android:textStyle="bold"
            android:textSize="18sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginBottom="4dp" />

        <!-- Subtitle TextView -->
        <TextView
            android:id="@+id/studentDashboardExamSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subject or Description"
            android:textColor="#888888"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Right Content (Take Exam Button) -->
    <Button
        android:id="@+id/takeExamButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="10dp"
        android:text="Take Exam"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_vertical"
        android:minWidth="120dp"
        android:background="@drawable/bg_button"
        android:layout_marginStart="16dp"
        android:gravity="center" />
</LinearLayout>
