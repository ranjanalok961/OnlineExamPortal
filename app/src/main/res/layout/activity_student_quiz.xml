<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F8F9FD"
    tools:context=".Student_Quiz">

    <!-- Header with Title and Icon -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp">


        <TextView
            android:id="@+id/examTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Exam - Mathematics"
            android:textColor="#37474F"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <!-- Instructions Text -->
    <TextView
        android:id="@+id/instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please review your answers before submitting."
        android:textColor="#607D8B"
        android:textSize="14sp"
        android:layout_marginTop="8dp" />

    <!-- Question Number Display -->
    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 3 of 20"
        android:textColor="#37474F"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <!-- Question Options Layout -->
    <RadioGroup
        android:id="@+id/optionsGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_question_card"
        android:padding="16dp"
        android:layout_marginTop="8dp">

        <RadioButton
            android:id="@+id/optionA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A. 12"
            android:textSize="16sp"
            android:textColor="#37474F" />

        <RadioButton
            android:id="@+id/optionB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="B. 15"
            android:textSize="16sp"
            android:textColor="#37474F" />

        <RadioButton
            android:id="@+id/optionC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C. 18"
            android:textSize="16sp"
            android:textColor="#37474F" />

        <RadioButton
            android:id="@+id/optionD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="D. 21"
            android:textSize="16sp"
            android:textColor="#37474F" />
    </RadioGroup>

    <!-- Navigation Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/previousButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Previous"
            android:backgroundTint="#E0E0E0"
            android:textColor="#37474F"
            android:padding="12dp" />

        <Button
            android:id="@+id/nextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Next"
            android:backgroundTint="#03A9F4"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Submit Button -->
    <Button
        android:id="@+id/submitExamButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Exam"
        android:backgroundTint="#00BCD4"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:layout_marginTop="16dp" />

</LinearLayout>